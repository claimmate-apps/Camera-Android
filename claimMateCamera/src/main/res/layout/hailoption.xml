<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_height="36dp">



                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="60dp"
                        android:background="#645B5B"
                        android:id="@+id/btn_replace_front"
                        android:textColor="@color/white"
                        android:text="@string/replace"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:gravity="center"
                        android:layout_height="match_parent"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="60dp"
                        android:background="#FF0000"
                        android:textColor="@color/white"
                        android:id="@+id/btn_repair_front"

                        android:text="REPAIR"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:gravity="center"

                        android:layout_height="match_parent"/>


                </LinearLayout>
                <CheckBox
                    android:id="@+id/rbtn_frontslope"
                    android:layout_width="125dp"
                    android:layout_height="45dp"
                    android:layout_alignEnd="@+id/rbtn_rightslope"
                    android:layout_alignRight="@+id/rbtn_rightslope"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:layout_alignParentTop="true"
                    android:checked="true"
                    android:text="Front" />

                <Button
                    android:id="@+id/txt_frontslope"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/rbtn_frontslope"
                    android:layout_toRightOf="@+id/rbtn_frontslope"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:inputType="number"
                    android:text="1"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_height="36dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="60dp"
                        android:background="#645B5B"
                        android:textColor="@color/white"
                        android:text="@string/replace"
                        android:id="@+id/btn_replace_right"

                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:gravity="center"
                        android:layout_height="match_parent"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="60dp"
                        android:background="#FF0000"
                        android:textColor="@color/white"
                        android:text="REPAIR"
                        android:textStyle="bold"
                        android:id="@+id/btn_repair_right"

                        android:textSize="12dp"
                        android:gravity="center"

                        android:layout_height="match_parent"/>


                </LinearLayout>

                <CheckBox
                    android:id="@+id/rbtn_rightslope"
                    android:layout_width="125dp"
                    android:layout_height="45dp"
                    android:layout_alignEnd="@+id/rbtn_rearslope"
                    android:layout_alignRight="@+id/rbtn_rearslope"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:checked="false"
                    android:layout_gravity="center_vertical"

                    android:text="Right" />

                <Button
                    android:id="@+id/txt_rightslope"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignBaseline="@+id/rbtn_rightslope"
                    android:layout_alignBottom="@+id/rbtn_rightslope"
                    android:layout_toEndOf="@+id/rbtn_rearslope"
                    android:layout_toRightOf="@+id/rbtn_rearslope"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:textStyle="bold"

                    android:text="1"
                    android:textSize="20dp"
                    android:visibility="invisible" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"

                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_height="36dp">





                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="60dp"
                        android:background="#645B5B"
                        android:textColor="@color/white"
                        android:id="@+id/btn_replace_rear"

                        android:text="@string/replace"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:gravity="center"
                        android:layout_height="match_parent"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="60dp"
                        android:id="@+id/btn_repair_rear"

                        android:background="#FF0000"
                        android:textColor="@color/white"
                        android:text="REPAIR"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:gravity="center"

                        android:layout_height="match_parent"/>


                </LinearLayout>

                <CheckBox
                    android:id="@+id/rbtn_rearslope"
                    android:layout_width="125dp"
                    android:layout_height="45dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:checked="false"
                    android:layout_gravity="center_vertical"

                    android:text="Rear" />


                <Button
                    android:id="@+id/txt_rearslope"
                    android:layout_width="45dp"
                    android:layout_height="45dp"

                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:inputType="number"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textStyle="bold"

                    android:textSize="20dp"
                    android:visibility="invisible" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"

                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_height="36dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="60dp"
                        android:background="#645B5B"
                        android:textColor="@color/white"
                        android:text="@string/replace"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:gravity="center"
                        android:id="@+id/btn_replace_left"
                        android:layout_height="match_parent"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="60dp"
                        android:background="#FF0000"
                        android:textColor="@color/white"
                        android:text="REPAIR"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:id="@+id/btn_repair_left"

                        android:gravity="center"

                        android:layout_height="match_parent"/>


                </LinearLayout>

                <CheckBox
                    android:id="@+id/rbtn_leftslope"
                    android:layout_width="125dp"
                    android:layout_height="45dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:checked="false"
                    android:layout_gravity="center_vertical"

                    android:text="Left" />


                <Button
                    android:id="@+id/txt_leftslope"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:textStyle="bold"

                    android:text="1"
                    android:textSize="20dp"
                    android:visibility="invisible" />

            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="0.3"

            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_slopno"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>
