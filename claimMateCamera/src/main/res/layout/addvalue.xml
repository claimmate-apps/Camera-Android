<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.commonsware.cwac.camera.demo.activities.AddValueActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/relativeLayout6">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lbltitle"
            android:layout_alignParentTop="true"
            android:background="#4db3a2"

            android:textColor="#fff"
            android:textSize="17dp"
            android:text="Roof"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical|center_horizontal" />

        <RelativeLayout
            android:id="@+id/rlback"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/whitebackarrow" />
        </RelativeLayout>

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/btnadd"
            android:layout_centerVertical="true"
            android:background="@drawable/addicon"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="8dp" />
    </RelativeLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvmenuCeiling"
        android:layout_below="@+id/relativeLayout6" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="#ACACAC"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/rladdvalue"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="Value Name:"
            android:id="@+id/textView2"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:paddingRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:id="@+id/txtname"
            android:textColor="#ffffff"
            android:textSize="14dp"

            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView2"
            android:paddingLeft="8dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:visibility="visible"
            android:layout_below="@+id/lblshortname"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp">


            <TextView
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:id="@+id/textView3"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />


            <Button
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="Ok"
                android:textColor="#ffffff"

                android:id="@+id/btnok"
                android:background="@drawable/button_background"
                android:textSize="16dp"
                android:visibility="visible"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textView3"
                android:layout_toEndOf="@+id/textView3" />



            <Button
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="Cancel"
                android:textColor="#ffffff"
                android:id="@+id/btncancel"
                android:background="@drawable/button_background"
                android:textSize="16dp"
                android:visibility="visible"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/textView3"
                android:layout_toStartOf="@+id/textView3" />


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="Short Name:"
            android:id="@+id/lblshortname"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:gravity="center_vertical"
            android:paddingRight="5dp"
            android:layout_below="@+id/textView2"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:visibility="gone" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:id="@+id/txtshortname"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:paddingLeft="8dp"
            android:layout_alignTop="@+id/lblshortname"
            android:layout_toRightOf="@+id/lblshortname"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:visibility="gone" />


    </RelativeLayout>


</RelativeLayout>
