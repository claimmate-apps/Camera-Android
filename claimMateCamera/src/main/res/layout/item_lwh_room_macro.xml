<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:layout_marginTop="2dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginLeft="2dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/fill_round_shape"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtLengthDec"
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/txtLength"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="12"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtLengthInc"
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="22dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginLeft="4dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/fill_round_shape"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtWidthDec"
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/txtWidth"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="12"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtWidthInc"
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="22dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginLeft="4dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/fill_round_shape"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtHeightDec"
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/txtHeight"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="8"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtHeightInc"
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="22dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnAdd"
        android:text="+"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginLeft="4dp"
        android:background="@android:color/transparent"
        android:layout_width="40dp"
        android:layout_height="match_parent" />
</LinearLayout>
